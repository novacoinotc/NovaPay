{
  "name": "@novapay/crypto",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tron": {
      "types": "./dist/tron/index.d.ts",
      "import": "./dist/tron/index.js"
    },
    "./ethereum": {
      "types": "./dist/ethereum/index.d.ts",
      "import": "./dist/ethereum/index.js"
    },
    "./encryption": {
      "types": "./dist/encryption/index.d.ts",
      "import": "./dist/encryption/index.js"
    },
    "./prices": {
      "types": "./dist/prices/index.d.ts",
      "import": "./dist/prices/index.js"
    },
    "./hd-wallet": {
      "types": "./dist/hd-wallet/index.d.ts",
      "import": "./dist/hd-wallet/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@novapay/shared": "workspace:*",
    "@scure/bip32": "1.4.0",
    "bip39": "^3.1.0",
    "ethers": "^6.11.0",
    "tronweb": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
