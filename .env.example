# ===========================================
# NovaPay Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Database (Neon PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/novapay?sslmode=require

# ===========================================
# Security & Encryption
# ===========================================
# Master password for encrypting private keys (min 32 characters)
ENCRYPTION_MASTER_PASSWORD=your-very-secure-master-password-here

# Internal API key for worker <-> API communication
INTERNAL_API_KEY=generate-a-secure-random-string-here

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-another-secure-random-string

# ===========================================
# Blockchain - Tron
# ===========================================
# TronGrid API (mainnet: https://api.trongrid.io, testnet: https://api.shasta.trongrid.io)
TRON_FULL_HOST=https://api.trongrid.io

# TronGrid API key (get from https://www.trongrid.io/)
TRONGRID_API_KEY=your-trongrid-api-key

# Your hot wallet address on Tron (where funds are swept to)
HOT_WALLET_TRON=TYourHotWalletAddressHere

# ===========================================
# Blockchain - Ethereum
# ===========================================
# Ethereum RPC URL (Infura, Alchemy, etc.)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Your hot wallet address on Ethereum
HOT_WALLET_ETHEREUM=0xYourHotWalletAddressHere

# ===========================================
# SPEI Provider
# ===========================================
# OPM or Finco Pay API configuration
SPEI_API_URL=https://api.openpay.mx/v1
SPEI_API_KEY=your-spei-api-key
SPEI_MERCHANT_ID=your-merchant-id

# ===========================================
# API URLs
# ===========================================
# Base URL of the Vercel API (for worker to call)
# In production, this would be your Vercel deployment URL
API_BASE_URL=http://localhost:3000

# ===========================================
# Optional - Development
# ===========================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug logging
DEBUG=false
